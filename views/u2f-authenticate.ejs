<!-- views/u2f-register.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://demo.yubico.com/js/u2f-api.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> U2F Authentication</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
        <div id="alert_row" class="alert" style="display:none"></div>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %>
                    </p>

            </div>
        </div>
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-key"></span> U2F</h3>
                <p>Press your key</p>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function register() {
        $.ajax({
            url: '/u2f/auth/request',
            type: 'GET',
            success: function(req) {
                $('#alert_row').html('Press your key').addClass('alert-info').show();
                u2f.sign(req.appId, req.challenge, [req], function(res) {
                    console.log(res);
                    $.ajax({
                        url: '/u2f/auth/challenge',
                        type: 'POST',
                        data: res,
                        success: function(data) {
                            console.log(data);
                            if(data == "OK") {
                                $('#alert_row').hide().attr('class', '').html('').addClass('alert alert-success').html('Successfully authenticated. Redirecting in 3 seconds...').show();
                                setTimeout(function() { window.location.replace("/profile"); }, 3000);
                            } else {
                                $('#alert_row').hide().attr('class', '').html('').addClass('alert alert-danger').html(data).show();
                            }
                        }
                    })
                });
            }
        });
    }

    register();
</script>
</body>
</html>
